{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ES2015"],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16"
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "Node16",
      "moduleResolution": "Node16"
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "types"]
}
